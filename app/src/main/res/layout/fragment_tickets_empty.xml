<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.doubletapp.hermitage.hermitage.ui.ticket.TicketsEmptyFragment">

    <TextView
        android:id="@+id/tickets_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/gray"
        android:text="@string/tickets_empty_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tickets_empty"
        app:layout_constraintRight_toRightOf="@id/tickets_empty"
        app:layout_constraintTop_toBottomOf="@id/tickets_empty"
        android:src="@drawable/tickets_img"/>
    
    <Button
        android:id="@+id/tickets_empty_button"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/tickets_empty_button"
        android:textColor="@android:color/white"
        android:background="@drawable/blue_button_rounded"/>

</android.support.constraint.ConstraintLayout>
